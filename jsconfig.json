{
  "include": ["vite.config.*", "vitest.config.*", "cypress.config.*", "playwright.config.*"],
  "exclude": ["node_modules", "src/**/__tests__/*", "dist", "**/*.js"],
  "compilerOptions": {
    "composite": true,
    "types": ["node"],
    "module": "commonjs",
    // "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "/#/*": ["types/*"]
    }
  }
}
